extends layout

block content
    h1= title
    p Página #{title}
    .row
        .col-md-4
        .panel.panel-default
            .panel-heading  A&ntilde;adir Tarea
            .panel-body
                form(action='/tareas/new', method='post')
                    .form-group
                        | Nombre de la Tarea
                        br
                        |
                        input(type='text', name='nom')
                        br
                    .form-group
                        |  Etiquetas (separadas por coma)
                        br
                        |
                        input(type='text', name='etiquetes')
                        br
                    .form-group
                        |  % Realizaci&oacute;n
                        br
                        |
                        input(type='number', min='0', max='100', name='realització')
                        br
                    .form-group
                        |
                        input.btn.btn-default(type='submit', value='Añadir')