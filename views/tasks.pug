extends layout

block content
    h1= title
    p Página #{title}
    #index.row
        .panel.panel-default
            .panel-heading  Añadir tareas
            .panel-body
                | Desde aquí podrás añadir mas tareas dando click en añadir.
                br
                |
                button.btn.btn-default(type='submit', onclick="window.location='/tareas/new'") Añadir
                |
                br
        each tarea, i in tareas
            .col-md-4
                .panel.panel-default
                    .panel-heading  #{tarea.nom}
                    .panel-body
                        .progress
                            .progress-bar(role='progressbar', aria-valuenow='tarea.realització', aria-valuemin='0', aria-valuemax='100', style='width:'+ tarea.realització+ '%')
                                span.sr-only tarea.realització% Complete
                                |  #{tarea.realització} %
                        |
                        .list-inline
                            each label in tarea.etiquetes
                                li
                                    span.label.label-default #{label}
                        |
                        form(action='/update', method='post')
                            .form-group
                                input(type='hidden', name='actualitzar', value=+i)
                            .form-group
                                button.btn.btn-default(type='submit') Update